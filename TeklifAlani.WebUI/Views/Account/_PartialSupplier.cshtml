@model Supplier
@{
    var index = (int)ViewData["Index"];
}

<div class="row">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title text-center"> Tedarikçi Bilgiler </h3>
        </div>
        <div class="card-body">
            <div id="supplier-forms" class="row">
                <!-- Mevcut Tedarikçi Formları Buraya Eklenecek -->
               
                    <div class="col-md-6 col-sm-12 supplier-form">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Şirket Adı</label>
                            <input type="text" class="form-control" name="Suppliers[@index].CompanyName" value="Suppliers[@index].CompanyName" />
                            </div>
                            <div class="form-group">
                                <label>İletişim Kişisi</label>
                            <input type="text" class="form-control" name="Suppliers[@index].ContactName" value="Suppliers[@index].ContactName" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                            <input type="email" class="form-control" name="Suppliers[@index].Email" value="Suppliers[@index].Email" />
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                            <input type="text" class="form-control" name="Suppliers[@index].Phone" value="Suppliers[@index].Phone" />
                            </div>
                            <!-- Silme butonu -->
                            <button type="button" class="btn btn-danger" onclick="removeCurrentSupplier(this)">Tedarikçi Sil</button>
                        </div>
                    </div>
                
            </div>

            <!-- Butonlar -->
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <button type="button" class="btn btn-success col-6" onclick="addSupplier()">Tedarikçi Ekle</button>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>



